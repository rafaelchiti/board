.cardForm
  position fixed
  border 1px solid board-gray
  background-color board-blue
  border-radius top 4px
  padding 1rem
  bottom 0
  left 50%
  width 30rem
  height 4rem
  margin-left -(@width / 2)

  input[type="text"]
