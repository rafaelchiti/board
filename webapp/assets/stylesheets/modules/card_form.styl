.cardForm
  position fixed
  border 1px solid app-gray
  border-radius top 4px
  padding 1rem
  bottom 0
  left 10%
  width 30rem
  height 4rem
  z-index 1
  background-color white
  box-shadow(0px 0px 1px 1px rgba(app-gray, .5))

  input[type="text"]
    margin-right 1rem
    outline none
    border none
    border-bottom 1px solid app-red
    background transparent
