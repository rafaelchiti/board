.cardLabel
  width 1rem
  height 1rem
  background-color app-red
  border-radius(bottom left .3rem)
  border-radius(top right .3rem)
  margin .2rem
  cursor pointer
  transition all .5s ease

  &.selected
    transform rotate(180deg) scale(1.5) translate(.2rem, -.2rem)
    box-shadow 2px -2px 7px .3px rgba(1, 1, 1, 0.3)


