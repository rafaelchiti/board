.cardList
  width 282px
  height 100%
  float left
  margin-right 10px
  user-select(none)

  ._header
    position relative
    width 100%
    margin-bottom 10px
    background-color #F6F7F8
    padding 5px 8px
    border 1px solid
    border-color #E5E6E9 #DFE0E4 #D0D1D5
    border-radius(3px)

    ._title
      display none
      cursor pointer
      color app-dark-gray-2
      font-weight 300

  ._addCardButton
    opacity .4
    background-color #CFCFCF
    padding 3px
    margin-top 16px
    font-size 14px
    cursor pointer
    transition opacity .3s

    &:hover
      opacity 1