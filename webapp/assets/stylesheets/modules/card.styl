.card
  display inline-block
  position relative
  min-width 5rem
  max-width 10rem
  min-height 5rem
  outline 1px solid gray
  padding 1rem
  margin 1rem

  .card__title
    padding 0
    margin 0
    border-bottom 1px solid gray
    margin-bottom 1rem

  .card__description
    display block

  .card__remove
    position absolute
    top .5rem
    right .5rem
    cursor pointer